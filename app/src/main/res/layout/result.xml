<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#fff"
        android:elevation="2dp"
        android:padding="1dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="ЗНО 2015"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/score"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:text="date"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:text="Правильних відповідей: "
            android:textSize="14dp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/correct"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:text="Тестовий бал: "
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/mood"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/zno"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/text_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mood"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="10dp"
            android:text="@string/bad_mood"
            android:textAlignment="center"
            android:textColor="#000" />

    </RelativeLayout>
</RelativeLayout>